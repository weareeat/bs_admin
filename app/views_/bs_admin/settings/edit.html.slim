.page-header
  h1 Edit Setting
  p
    span.label.label-danger Watch Out!
    | Changes in the Settings have effect directly on the website's behavior, so make sure you know what you're doing =]
  ol.breadcrumb
    li= @setting.group.main_group
    li= @setting.group.display_name
= form_for @setting, url: bs_admin.update_setting_path, :html => { :class => 'form-horizontal' } do |f|
  = hidden_field_tag  :id, @setting.id
  = hidden_field_tag  :type, @type
  = hidden_field_tag  :group_key, @group_key
  -@type = "textarea" if @type == "text"
  -@type = "text" if @type == "string"
  -@type = "checkbox" if @type == "boolean"
  = bs_field f, :value, @type, { :hint => @setting.hint, :label => @setting.display_name }
  = bs_actions f, bs_admin.settings_group_path(@setting.group.key)
